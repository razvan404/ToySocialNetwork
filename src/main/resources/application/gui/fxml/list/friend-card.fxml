<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane onMouseClicked="#handleElementClicked" prefHeight="150.0" prefWidth="128.0" styleClass="card" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.gui.controller.list.FriendCardController">
   <children>
      <VBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <ImageView fx:id="userPhoto" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../media/avatars/capybara.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
      <AnchorPane layoutX="80.0" prefHeight="50.0" prefWidth="200.0" styleClass="user-info" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
         <children>
            <VBox alignment="CENTER" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
               <children>
                  <TextFlow prefHeight="18.0" prefWidth="125.0" textAlignment="CENTER">
                     <children>
                        <Text fx:id="userNameText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="user-name" text="USER NAME" />
                     </children>
                  </TextFlow>
                  <Text fx:id="inCommonText" strokeType="OUTSIDE" strokeWidth="0.0" text="XYZT friends in common" />
               </children>
            </VBox>
         </children>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@../../css/style.css" />
      <URL value="@../../css/list/friend-card.css" />
   </stylesheets>
</AnchorPane>
