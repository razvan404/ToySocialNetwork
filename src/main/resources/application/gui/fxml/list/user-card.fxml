   <children>
      <HBox alignment="CENTER" styleClass="image" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <ImageView fx:id="userPhoto" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../media/avatars/capybara.png" />
               </image>
            </ImageView>
         </children>
      </HBox>
      <AnchorPane layoutX="80.0" prefWidth="200.0" styleClass="user-info" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text fx:id="userNameText" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="user-name" text="USER NAME" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="-2.0" />
            <Text layoutY="19.0" strokeType="OUTSIDE" strokeWidth="0.0" />
            <Text fx:id="friendsFromText" layoutY="37.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Friends from: DD/MM/YYYY" AnchorPane.bottomAnchor="11.0" AnchorPane.leftAnchor="5.0" />
            <Text fx:id="inCommonText" layoutY="56.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Common friends: XYZT" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="5.0" />
         </children>
      </AnchorPane>
   </children>
   <stylesheets>
      <URL value="@../../css/style.css" />
      <URL value="@../../css/list/user-card.css" />
   </stylesheets>
</AnchorPane>
